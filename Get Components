def get_components(crossings):
    """Determines the components of a PD
       Returns a list of lists of (adjacently ordered) arc labels """
    
    components = []
    # hash giving both neighbouring arc labels of an arc 
    nbrs = {}
    for c in crossings:
        # get pairs of adjacent arc labels
        for p in ((c[0],c[2]),(c[1],c[3])):
            nbrs.setdefault(p[0], set()).add(p[1])
            nbrs.setdefault(p[1], set()).add(p[0])

    visited = set()
    # iterate over all arcs
    for arc in nbrs:
        if arc in visited:
            continue
        stack = [arc]
        visited.add(arc)
        knot = []
        
        # do depth-first-search on the arc to find its knot
        while stack:
            curr = stack.pop()
            knot.append(curr)
            for nbr in nbrs[curr]:
                if nbr not in visited:
                    visited.add(nbr)
                    stack.append(nbr)
        components.append(knot)

    return components
